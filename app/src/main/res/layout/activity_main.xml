<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/heroBg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/images__3_"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"
        />


    <ImageView
        android:id="@+id/logoClub"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@drawable/sporting_clube_de_portugal_vector_logo"
        app:layout_constraintTop_toTopOf="@id/heroBg"
        app:layout_constraintRight_toRightOf="@id/heroBg"
        app:layout_constraintLeft_toLeftOf="@id/heroBg"
        app:layout_constraintBottom_toBottomOf="@id/heroBg"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sporting Clube de Portugal"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/black"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        app:layout_constraintTop_toBottomOf="@id/logoClub"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/dwAboutIt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/heroBg"
        android:padding="10dp"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/clubDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#32a852"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sporting Clube de Portugal, commonly known as Sporting CP or Sporting Lisbon, is a major sports club based in Lisbon, Portugal. Best known for its men’s football team competing in the Primeira Liga, Sporting is one of the country’s most successful and historic clubs with multiple sports divisions."
                android:textColor="@android:color/white"
                android:padding="10dp"
                android:justificationMode="inter_word" />
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:id="@+id/linear_layout_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/clubDesc"
            >

            <include
                android:id="@+id/layout_hist"
                layout="@layout/layout_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                />
            <include
                android:id="@+id/layout_coach"
                layout="@layout/layout_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                />
            <include
                android:id="@+id/layout_players"
                layout="@layout/layout_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>